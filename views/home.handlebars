<link href="https://fonts.googleapis.com/css2?family=Allerta+Stencil&family=Open+Sans:wght@300&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/css/home.css" type="text/css">

<!-- jumbotron to display page description -->
<div class="container">
  <div class="jumbotron">
		<h1 id="logoText"> Random Workout of the Day</h1>
    <hr class="my-4">
    <p class="aboutText">Gym closed? Feeling lost? No problem!</p> 
  </div>

  <!-- format two columns -->
  <div class="gray">
    <div class="row outer">
      <div class="col-sm-4 col-xs-12" id="equipDiv">
        <p>Tell me what gym equipment you have on hand and I'll assign a random workout: </p>
        <!-- display the list of equipment received from the server/database along with checkboxes -->
        <ul id="equipList">
          {{#each equipment}}
          <row class="row"> 
          <li class="list">
            <span class="col-sm-1 equipCheck">
              <input type="checkbox" name="{{this}}" class="equipCheck"value="{{this}}"></input>
            </span>
            <span class="col-sm-7"> {{this}}</span>
          </li>
          </row>
          {{/each}}
        </ul>
      </div>
      <div class="col-sm-8 col-xs-12" id="tableDiv"></div>
    </div>
  </div>
</div> 

<script src="/js/home.js"></script>